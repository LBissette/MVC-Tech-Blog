<link rel="stylesheet" href="./css/style.css" />
<script src="https://cdn.tailwindcss.com"></script>

<div
    class="flex h-screen w-full items-center justify-center space-x-10"
>
    <div class="rounded-xl bg-gray-800 bg-opacity-50 px-16 pt-10 pb-20 shadow-lg max-sm:px-8">
        <div class="text-white">
            <div class="mb-8 flex flex-col items-center">
                <span class="text-gray-300">Enter Login Details</span>
            </div>
            <form class="login-form">
                <div class="mb-4 text-lg">
                    <input
                        class="rounded-3xl border-none bg-blue-800 bg-opacity-50 px-6 py-2 text-center text-inherit placeholder-slate-200 shadow-lg outline-none"
                        type="text"
                        name="name"
                        id="login-id"
                        placeholder="username"
                    />
                </div>

                <div class="mb-4 text-lg">
                    <input
                        class="rounded-3xl border-none bg-blue-800 bg-opacity-50 px-6 py-2 text-center text-inherit placeholder-slate-200 shadow-lg outline-none"
                        type="Password"
                        name="name"
                        id="login-password"
                        placeholder="password"
                    />
                </div>
                <div class="mt-8 flex justify-center text-lg text-black">
                    <button
                        type="submit"
                        class="rounded-3xl bg-blue-200 bg-opacity-50 px-10 py-2 text-white shadow-xl transition-colors duration-300 hover:bg-blue-600"
                    >Login</button>
                </div>
            </form>
        </div>
    </div>


    <div class="rounded-xl bg-gray-800 bg-opacity-50 px-16 pt-10 pb-20 shadow-lg max-sm:px-8">
        <div class="text-white">
            <div class="mb-8 flex flex-col items-center">
                <span class="text-gray-300">Sign up here</span>
            </div>
            <form class="signup-form">
                <div class="mb-4 text-lg">
                    <input
                        class="rounded-3xl border-none bg-blue-800 bg-opacity-50 px-6 py-2 text-center text-inherit placeholder-slate-200 shadow-lg outline-none"
                        type="text"
                        name="name"
                        placeholder="username"
                        id="signup-username"
                    />
                </div>

                <div class="mb-4 text-lg">
                    <input
                        class="rounded-3xl border-none bg-blue-800 bg-opacity-50 px-6 py-2 text-center text-inherit placeholder-slate-200 shadow-lg outline-none"
                        type="Password"
                        name="name"
                        placeholder="password"
                        id="signup-password"
                    />
                </div>
                <div class="mt-8 flex justify-center text-lg text-black">
                    <button
                        type="submit"
                        class="rounded-3xl bg-blue-200 bg-opacity-50 px-10 py-2 text-white shadow-xl transition-colors duration-300 hover:bg-blue-600"
                    >Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>
